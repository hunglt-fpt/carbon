{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "files": {
    "ignoreUnknown": false,
    "maxSize": 1258291, // 1.2 MB
    "includes": [
      "!.vscode",
      "!sst.env.d.ts",
      "!packages/database/src/types.ts",
      "!packages/database/src/swagger-docs-schema.ts",
      "**/*.json",
      "examples/**/*"
    ]
  },
  "formatter": { "enabled": true, "indentStyle": "space", "indentWidth": 2 },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "a11y": {
        "noAccessKey": "warn",
        "noAriaUnsupportedElements": "warn",
        "noRedundantAlt": "warn",
        "noRedundantRoles": "warn",
        "useAltText": "warn",
        "useAnchorContent": "warn",
        "useAriaActivedescendantWithTabindex": "warn",
        "useAriaPropsForRole": "warn",
        "useAriaPropsSupportedByRole": "warn",
        "useIframeTitle": "warn",
        "useValidAnchor": "warn",
        "useValidAriaProps": "warn",
        "useValidAriaRole": {
          "level": "warn",
          "options": { "ignoreNonDom": true }
        },
        "useValidAriaValues": "warn",
        "useValidLang": "warn"
      },
      "complexity": {
        "noCommaOperator": "warn",
        "noExtraBooleanCast": "warn",
        "noUselessConstructor": "warn",
        "noUselessEscapeInRegex": "warn",
        "noUselessLabel": "warn",
        "noUselessLoneBlockStatements": "warn",
        "noUselessRename": "warn",
        "noUselessStringConcat": "warn",
        "useLiteralKeys": "warn"
      },
      "correctness": {
        "noConstAssign": "error",
        "noEmptyCharacterClassInRegex": "warn",
        "noEmptyPattern": "warn",
        "noInvalidUseBeforeDeclaration": "warn",
        "noSelfAssign": "warn",
        "noUndeclaredVariables": "error",
        "noUnreachable": "warn",
        "noUnreachableSuper": "warn",
        "noUnusedLabels": "warn",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "useIsNan": "warn",
        "useJsxKeyInIterable": "warn",
        "useValidTypeof": "warn",
        "useYield": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtmlWithChildren": "warn",
        "noGlobalEval": "error"
      },
      "style": { "useArrayLiterals": "warn" },
      "suspicious": {
        "noCatchAssign": "warn",
        "noCommentText": "warn",
        "noControlCharactersInRegex": "warn",
        "noDuplicateCase": "warn",
        "noDuplicateClassMembers": "warn",
        "noDuplicateObjectKeys": "warn",
        "noDuplicateParameters": "warn",
        "noEmptyBlockStatements": "warn",
        "noFunctionAssign": "error",
        "noGlobalAssign": "error",
        "noLabelVar": "warn",
        "noRedeclare": "error",
        "noSelfCompare": "warn",
        "noShadowRestrictedNames": "warn",
        "noSparseArray": "warn",
        "noTemplateCurlyInString": "warn",
        "noUnsafeNegation": "warn",
        "useGetterReturn": "warn",
        "useIterableCallbackReturn": "warn"
      }
    }
  },
  "javascript": {
    "formatter": { "quoteStyle": "double", "trailingCommas": "none" }
  },
  "json": {
    "parser": {
      "allowTrailingCommas": false
    },
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "linter": {
        "rules": {
          "complexity": { "noUselessConstructor": "warn" },
          "correctness": {
            "noInvalidUseBeforeDeclaration": "warn",
            "noUndeclaredVariables": "off",
            "noUnusedVariables": "warn"
          },
          "style": { "useArrayLiterals": "warn" },
          "suspicious": {
            "noDuplicateClassMembers": "off",
            "noRedeclare": "error"
          }
        }
      }
    },
    {
      "includes": [
        "*.spec.ts",
        "*.test.ts",
        "**/tests/**/*.ts",
        "**/__tests__/**/*.ts"
      ],
      "javascript": {
        "globals": [
          "afterEach",
          "afterAll",
          "beforeEach",
          "beforeAll",
          "describe",
          "expect",
          "it",
          "test",
          "jest"
        ]
      }
    }
  ],
  "css": {
    "parser": { "tailwindDirectives": true }
  },
  "assist": {
    "enabled": true,
    "actions": { "source": { "organizeImports": "on" } }
  }
}
